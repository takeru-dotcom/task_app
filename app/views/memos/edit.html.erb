<h3>スケジュール編集</h3>

<% if flash[:notice_red] %>
  <p class="notice_red"> <%= flash[:notice_red] %> </p>
<% end %>

<%= render "shared/error", obj: @memo %>

<%= form_with model:@memo do |f| %>
  <table>

    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_date ,"開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td><%= f.check_box :all_day, {}, 1, 2 %> <br> 終日の場合はチェックを入れます</td>
    </tr>

    <tr>
      <th><%= f.label :schedule ,"スケジュールメモ" %></th>
      <td><%= f.text_area :schedule %></td>
    </tr>

  </table>

  <div> 
    <ul>
      <li><%= f.submit "スケジュールの編集を完了する" %></li>
      <li><%= link_to "スケジュール一覧", :memos %></li>
    </ul>
  </div>
<% end %>